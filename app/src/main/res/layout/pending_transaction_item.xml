<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="8dp"
    android:elevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/info_container"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/month_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MARCH 15"
            android:textColor="#1a1a1a"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="TO BE REDEEMED VIA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/via"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="PAYTM"
            android:textColor="#7c7c7c"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:text="REDEEM ON PHONE"
            android:textColor="#1a1a1a"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="7481043457"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:text="REQUEST ID:"
            android:textColor="#1a1a1a"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="7481043457"
            android:textColor="#7c7c7c"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:padding="16dp"
        android:layout_alignParentEnd="true"
        android:text="@string/earning_format"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#be5907"
        android:id="@+id/requestedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/settle_btn_bg"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
       android:layout_below="@+id/info_container"
        android:text="Settle"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/settleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/info_container"
        android:hint="Transaction ID"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/transaction_id_bg"
        android:layout_toStartOf="@+id/settleBtn"
        android:id="@+id/transaction_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>